<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:launcher="http://schemas.android.com/apk/res/com.konka.ios7launcher" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/container" android:background="@drawable/quickaction_popup" android:scrollbars="none" android:fadingEdgeLength="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <ImageView android:id="@+id/arrow_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/quickaction_arrow_up"/>
    <ImageView android:id="@+id/arrow_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:src="@drawable/quickaction_arrow_down" android:layout_below="@+id/container"/>
</RelativeLayout>
