<?xml version="1.0" encoding="utf-8"?>
<com.cyanogenmod.trebuchet.AppsCustomizeTabHost xmlns:android="http://schemas.android.com/apk/res/android" xmlns:launcher="http://schemas.android.com/apk/res/com.konka.ios7launcher" android:background="@drawable/all_app_bg">
