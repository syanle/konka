<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:launcher="http://schemas.android.com/apk/res/com.konka.ios7launcher" android:layout_width="match_parent" android:layout_height="288dp">
    <ScrollView android:id="@+id/scroller" android:background="@drawable/quickaction_popup" android:scrollbars="none" android:fadingEdgeLength="5dp" android:layout_width="match_parent" android:layout_height="288dp" android:layout_marginTop="16dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/tracks" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </ScrollView>
    <ImageView android:id="@+id/arrow_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/quickaction_arrow_up"/>
    <ImageView android:id="@+id/arrow_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-4dp" android:src="@drawable/quickaction_arrow_down" android:layout_below="@+id/scroller"/>
</RelativeLayout>
