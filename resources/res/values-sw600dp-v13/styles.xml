<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WallpaperPicker">
        <item name="android:screenOrientation">unspecified</item>
    </style>
    <style name="ClingButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cling_button_bg</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/cling_dismiss</item>
    </style>
    <style name="ClingTitleText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#49c0ec</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="ClingText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="WorkspaceIcon.Portrait">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">@dimen/app_icon_padding_top</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="WorkspaceIcon.Landscape">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">@dimen/app_icon_padding_top</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>
    <style name="WorkspaceIcon.Portrait.Folder">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="WorkspaceIcon.Landscape.Folder">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="WorkspaceIcon.Portrait.AppsCustomize">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="WorkspaceIcon.Landscape.AppsCustomize">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="QSBBar">
        <item name="android:layout_gravity">left|right|center_vertical|center_horizontal|fill_horizontal|center|clip_horizontal</item>
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/qsb_bar_height</item>
    </style>
    <style name="SearchDropTargetBar">
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="SearchButton">
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:paddingLeft">@dimen/toolbar_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/toolbar_button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_button_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_button_vertical_padding</item>
    </style>
    <style name="SearchButtonDivider">
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DropTargetButtonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DropTargetButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingRight">60dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:shadowColor">#393939</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">@null</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:drawablePadding">7.5dp</item>
    </style>
    <style name="TabIndicator.AppsCustomize">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:maxWidth">360dp</item>
    </style>
    <style name="Theme">
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    <style name="SearchButton.Voice">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>
</resources>
